<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="grimbo.android.demo.slidingmenu"
    android:versionCode="1" android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />

    <application android:icon="@drawable/ic_launcher" android:label="@string/app_name">

        <!-- Menu slides over the app, starting offscreen to the left -->
        <activity android:name=".AnimationStackedFrames" android:label="AnimationStackedFrames">
        </activity>

        <!-- App slides right to reveal menu underneath -->
        <activity android:name=".HorzScrollWithListMenu" android:label="HorzScrollWithListMenu">
        </activity>

        <!-- -->
        <activity android:name=".HorzScrollWithImageMenu" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Menu -->
        <activity android:name=".MenuActivity" android:label="MenuActivity">
        </activity>

        <activity android:name=".HorzScrollWithFieldMenu" android:label="FieldActivity">
        </activity>
        <activity android:name=".HorzScrollWithProfileMenu" android:label="PrifleActivity">
        </activity>
        <activity android:name=".HorzScrollWithSettingMenu" android:label="SettingActivity">
        </activity>
        <activity android:name=".HorzScrollWithVideoMenu" android:label="VideoActivity">
        </activity>


        <activity android:name=".SplashActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden"
                  android:theme="@android:style/Theme.NoTitleBar"
                />

    </application>
</manifest>
